extends layout.pug

block content
    .container 
        .row 
            .col
                h1 Delete Contact
                h2 #{contact.First_Name}  #{contact.Last_Name}
        .row 
            .col 

                p(class='warning') Are you sure you want to delete this contact?
                form(action='/' + contact.id + '/delete', method='post')
                    .row.align-items-center
                        .col-auto
                            button.btn.btn-danger(type='submit') Yes!
                        .col
                            a(href='/' + contact.id, class='link') Nevermind